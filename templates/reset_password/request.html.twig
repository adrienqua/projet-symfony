{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe
{% endblock %}

{% block content %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="max-w-80 mx-auto p-6 bg-white shadow-md rounded-2xl dark:bg-gray-700 ">

		<h1 class="h3 mb-3 font-semibold text-2xl ">Réinitialiser le mot de passe</h1>
		{{ form_start(requestForm) }}
		{{ form_row(requestForm.email) }}
		<div>
			<small>
				Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
			</small>
		</div>

		<button class="mt-4 mb-4 btn-lg bg-fuchsia-400 text-sm font-medium hover:bg-fuchsia-300 transition-all duration-300 rounded-lg px-4 py-2">Envoyer le lien de réinitialisation du mot de passe</button>
		{{ form_end(requestForm) }}
	</div>
{% endblock %}
