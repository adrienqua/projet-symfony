<form method="post" 
   action="{{ path('app_admin_order_delete', {'id': order.id}) }}"
   onsubmit="return confirm('Voulez vous supprimer cette commande ?');"
   class="inline-block">
   <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
   <button type="submit" 
       class="btn bg-red-500 hover:bg-red-700 text-white py-2 px-4 rounded">
       Supprimer
   </button>
</form>