{% extends 'base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block content %}
    <section class="container mx-auto py-12 flex items-center justify-center min-h-screen">
        <div class="w-full max-w-4xl">
            <h1 class="text-3xl font-bold text-center mb-8">Liste des commandes</h1>

            <table class="min-w-full bg-white dark:bg-gray-700 shadow-md rounded-lg overflow-hidden">
                <thead class="bg-fuchsia-400 dark:bg-fuchsia-600 text-white">
                    <tr>
                        <th class="text-left px-6 py-3">ID</th>
                        <th class="text-left px-6 py-3">Statut</th>
                        <th class="text-left px-6 py-3">Date de création</th>
                        <th class="text-center px-6 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr class="border-t border-gray-200 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800">
                            <td class="px-6 py-4">{{ order.id }}</td>
                            <td class="px-6 py-4">{{ order.status.value }}</td>
                            <td class="px-6 py-4">{{ order.createdAt ? order.createdAt|date('d/m/Y H:i') : '' }}</td>
                            <td class="px-6 py-4 text-center">
                                <a href="{{ path('app_admin_order_show', {'id': order.id}) }}" class="text-blue-500 hover:underline">Voir</a>
                                <a href="{{ path('app_admin_order_edit', {'id': order.id}) }}" class="text-green-500 hover:underline ml-4">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center px-6 py-4 text-gray-500">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="text-center mt-6">
                <a href="{{ path('app_admin_order_new') }}" class="inline-block px-4 py-2 bg-fuchsia-400 text-white font-medium rounded-lg shadow-md hover:bg-fuchsia-500 transition duration-300">Créer une nouvelle commande</a>
            </div>
        </div>
    </section>
{% endblock %}
