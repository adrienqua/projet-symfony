<div class="container mx-auto my-8">
    {{ form_start(form, {'attr': {'class': 'space-y-6 bg-white dark:bg-gray-800 shadow-md rounded-lg p-6'}}) }}
    <div class="space-y-4">
        {% for field in form %}
            <div>
                {{ form_label(field, null, {'label_attr': {'class': 'block text-gray-700 dark:text-white font-bold mb-2'}}) }}
                {{ form_widget(field, {'attr': {'class': 'w-full border rounded-lg py-2 px-4 bg-gray-50 dark:bg-gray-700 dark:text-white'}}) }}
                {{ form_errors(field, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>
        {% endfor %}
    </div>
    <div class="text-right mt-6">
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg">
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
    {{ form_end(form) }}
</div>