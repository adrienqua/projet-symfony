<div class="relative bg-white p-6 rounded-lg shadow-md dark:bg-gray-700 transition-all duration-300 hover:scale-105">

	<a href={{path('app_offer_details', {'id': offer.id} )}}>
		<img src="https://placehold.co/600x400/png" alt="" class="w-full object-cover rounded-lg">
		<h2 class="text-lg font-semibold dark:text-white mt-2">{{ offer.title }}</h2>
		<p class=" text-gray-700 dark:text-gray-300">{{ offer.description }}</p>
	</a>

	<ul class="mt-4 flex  flex-wrap gap-2">
		{% for task in offer.tasks %}
			<li class="text-fuchsia-900 bg-fuchsia-200 hover:bg-fuchsia-300 dark:bg-fuchsia-200 py-1 px-2 rounded-2xl text-xs transition-all duration-300">
				<a href="{{ path('app_category_details', {'id': task.id} ) }}">{{ task.title }}</a>
			</li>
		{% endfor %}
	</ul>

	{% if app.user %}
		<button class="favorite-btn absolute text-2xl right-7 top-7" data-offer-id="{{ offer.id }}" data-is-favorite="{{ app.user.favoriteOffers.contains(offer) ? 'true' : 'false' }}">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="favorite-icon w-8 h-8 {{ app.user and app.user.favoriteOffers.contains(offer) ? 'text-red-500 fill-red-500' : 'text-gray-400' }}">
				<path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"/>
			</svg>
		</button>
	{% else %}
		<a href={{path('app_login')}} class="absolute text-2xl right-7 top-7">
			<span class='text-gray-400'>
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
					<path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"/>
				</svg>
			</span>
		</a>
	{% endif %}
	<div class="flex justify-center items-center absolute top-8 left-8 text-white text-xs font-semibold  px-2.5 py-0.5 rounded-lg h-7 w-8  bg-gray-400">
		<span>{{ offer.score }}</span>
	</div>


</div>
