<div class="gap-4 rounded-3xl shadow-md bg-white p-8 mb-8 dark:bg-gray-700">
	<div class="flex items-center gap-2">
		<span class="font-bold">{{review.author.username}}</span>
		<span class="flex items-center">
			{% for i in 1..5 %}
				{% if i <= review.rating %}
					<svg class="w-3 h-3 text-amber-300" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.957a1 1 0 00.95.69h4.162c.969 0 1.371 1.24.588 1.81l-3.37 2.448a1 1 0 00-.364 1.118l1.286 3.957c.3.921-.755 1.688-1.54 1.118l-3.37-2.448a1 1 0 00-1.175 0l-3.37 2.448c-.784.57-1.84-.197-1.54-1.118l1.286-3.957a1 1 0 00-.364-1.118L2.265 9.384c-.783-.57-.38-1.81.588-1.81h4.162a1 1 0 00.95-.69l1.286-3.957z"></path>
					</svg>
				{% else %}
					<svg class="w-3 h-3 text-gray-200" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.957a1 1 0 00.95.69h4.162c.969 0 1.371 1.24.588 1.81l-3.37 2.448a1 1 0 00-.364 1.118l1.286 3.957c.3.921-.755 1.688-1.54 1.118l-3.37-2.448a1 1 0 00-1.175 0l-3.37 2.448c-.784.57-1.84-.197-1.54-1.118l1.286-3.957a1 1 0 00-.364-1.118L2.265 9.384c-.783-.57-.38-1.81.588-1.81h4.162a1 1 0 00.95-.69l1.286-3.957z"></path>
					</svg>
				{% endif %}
			{% endfor %}
		</span>
	</div>
	<p class="text-xs text-gray-500 dark:text-gray-400">{{review.createdAt|date('d/m/Y H:i', 'Europe/Paris')}}</p>

	<p class="font-normal mt-2">{{review.comment}}</p>
</div>
