{% extends 'base.html.twig' %}

{% block title %}Admin Category{% endblock %}

{% block content %}
<div class="container mx-auto mt-10 px-4">
    <h1 class="text-3xl font-bold mb-6 text-gray-800 dark:text-white">Gestion des catégories</h1>

    <div class="overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500 dark:text-white">
            <thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-white">
                <tr>
                    <th scope="col" class="px-6 py-3">Id</th>
                    <th scope="col" class="px-6 py-3">Nom</th>
                    <th scope="col" class="px-6 py-3">Description</th>
                    <th scope="col" class="px-6 py-3">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr class="bg-white border-b hover:bg-black dark:bg-gray-800 dark:border-gray-700">
                    <td class="px-6 py-4">{{ category.id }}</td>
                    <td class="px-6 py-4">{{ category.name }}</td>
                    <td class="px-6 py-4">{{ category.description }}</td>
                    <td class="px-6 py-4">
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" class="text-blue-600 dark:text-blue-400 hover:underline">Aperçu</a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="ml-4 text-yellow-600 dark:text-yellow-400 hover:underline">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">Aucune catégorie trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex justify-end">
        <a href="{{ path('app_category_new') }}" class="inline-block bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
            Créer une catégorie
        </a>
    </div>
</div>
{% endblock %}
