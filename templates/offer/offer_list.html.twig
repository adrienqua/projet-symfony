{% extends 'base.html.twig' %}

{% block content %}
	<section class="container mx-auto py-12 dark:bg-gray-800 px-4 max-w-6xl">
		<h1 class="text-3xl font-bold text-center mb-8">Toutes les annonces</h1>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{% for offer in offers %}
				{{ include('ui/offer_card.html.twig') }}
			{% else %}
				<p class="text-gray-700 dark:text-white">Aucune offre disponible pour le moment.</p>
			{% endfor %}
		</div>
	</section>
{% endblock %}
